@{
   ViewData["Title"] = "Login";
}

<style>
    /* Full-page background for login */
    body {
        background: linear-gradient(135deg,#ffffff , #FBF5DD, #F8C794);
    }
    /* Expand layout container to full width only on this page */
    .container.flex-grow-1 {
        max-width: 100% !important;
        width: 100% !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
    }
    .login-page {
        --brand-red: #d46f12; /* primary */
        --brand-orange: #F8C794; /* secondary */
        --brand-gradient: linear-gradient(135deg, var(--brand-red) 0%, var(--brand-orange) 100%);
        --brand-red-10: rgba(212, 111, 18, 0.1);
        --brand-text: #7a7a7a;
        /* Let the body carry the page background */
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 24px;
        padding-bottom: 24px;
    }
    .login-page > .row { width: 100%; }
    .login-page .brand-chip {
        background: var(--brand-red-10);
        color: var(--brand-red);
    }
    .login-page .btn-primary {
        background-image: var(--brand-gradient);
        border: 0;
        box-shadow: 0 6px 16px rgba(191, 46, 46, 0.25);
    }
    .login-page .btn-primary:hover {
        filter: brightness(0.98);
    }
    .login-page a { color: var(--brand-red); }
    .login-page .input-group-text { color: var(--brand-red); }
    .login-page .card { border-radius: 14px; }
    .login-page .card-body { color: var(--brand-text); }
    @@media (min-width: 992px) {
        .login-hero {
            background: var(--brand-gradient);
            color: #fff;
            border-radius: 16px;
        }
    }
    /* Footer is globally sticky via layout now */
</style>

<div class="py-5 login-page">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="rounded-circle brand-chip d-inline-flex align-items-center justify-content-center" style="width:56px;height:56px;">
                            <i class="bi bi-person-lock fs-3"></i>
                        </div>
                        <h4 class="mt-3 mb-0">Welcome back</h4>
                        <p class="text-secondary small mb-0">Sign in to continue</p>
                    </div>

                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Email address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent"><i class="bi bi-envelope"></i></span>
                                <input id="username" type="text" name="username" class="form-control" placeholder="name@example.com" required />
                            </div>
                            <div class="invalid-feedback">Please enter your email.</div>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" for="password">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent"><i class="bi bi-shield-lock"></i></span>
                                <input id="password" type="password" name="password" class="form-control" placeholder="Your password" required />
                                <button type="button" class="btn btn-outline-secondary" id="togglePassword" aria-label="Show password">
                                    <i class="bi bi-eye" id="togglePasswordIcon"></i>
                                </button>
                            </div>
                            <div class="invalid-feedback">Please enter your password.</div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="true" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>
                            <a href="#" class="small text-decoration-none">Forgot password?</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-app">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Sign in
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 mb-0"><i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.Error</div>
                    }

                    <hr class="text-muted my-4" />
                    <p class="text-center small mb-0">Don’t have an account? <a asp-action="Register" class="text-decoration-none">Create one</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            var toggleBtn = document.getElementById('togglePassword');
            var pwd = document.getElementById('password');
            var icon = document.getElementById('togglePasswordIcon');
            if (toggleBtn && pwd && icon) {
                toggleBtn.addEventListener('click', function () {
                    var type = pwd.getAttribute('type') === 'password' ? 'text' : 'password';
                    pwd.setAttribute('type', type);
                    icon.classList.toggle('bi-eye');
                    icon.classList.toggle('bi-eye-slash');
                });
            }
        })();
    </script>
}