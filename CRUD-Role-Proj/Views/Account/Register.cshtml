@{
   ViewData["Title"] = "Create Account";
}

<style>
    /* Full-page background for register */
    body {
        background: linear-gradient(135deg,#ffffff , #FBF5DD, #F8C794);
    }
    /* Expand layout container to full width only on this page */
    .container.flex-grow-1 {
        max-width: 100% !important;
        width: 100% !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
    }
    .login-page {
        --brand-red: #d46f12; /* primary */
        --brand-orange: #F8C794; /* secondary */
        --brand-gradient: linear-gradient(135deg, var(--brand-red) 0%, var(--brand-orange) 100%);
        --brand-red-10: rgba(212, 111, 18, 0.1);
        --brand-text: #7a7a7a;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 24px;
        padding-bottom: 24px;
    }
    .login-page > .row { width: 100%; }
    .login-page .brand-chip {
        background: var(--brand-red-10);
        color: var(--brand-red);
    }
    .login-page a { color: var(--brand-red); }
    .login-page .input-group-text { color: var(--brand-red); }
    .login-page .card { border-radius: 14px; }
    .login-page .card-body { color: var(--brand-text); }
</style>

<div class="py-5 login-page">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="rounded-circle brand-chip d-inline-flex align-items-center justify-content-center" style="width:56px;height:56px;">
                            <i class="bi bi-person-plus fs-3"></i>
                        </div>
                        <h4 class="mt-3 mb-0">Create your account</h4>
                        <p class="text-secondary small mb-0">Sign up to continue</p>
                    </div>

                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent"><i class="bi bi-person"></i></span>
                                <input id="username" type="text" name="username" class="form-control" placeholder="Enter username" required />
                            </div>
                            <div class="invalid-feedback">Please enter a username.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent"><i class="bi bi-shield-lock"></i></span>
                                <input id="password" type="password" name="password" class="form-control" placeholder="Create a password" required />
                            </div>
                            <div class="invalid-feedback">Please enter a password.</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="roleId">Role</label>
                            <div class="input-group">
                                <span class="input-group-text bg-transparent"><i class="bi bi-briefcase"></i></span>
                                <select id="roleId" name="roleId" class="form-select" required>
                                    <option value="">Select a role</option>
                                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Roles)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="invalid-feedback">Please choose a role.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-app">
                                <i class="bi bi-person-plus-fill me-1"></i> Sign up
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 mb-0"><i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.Error</div>
                    }

                    <hr class="text-muted my-4" />
                    <p class="text-center small mb-0">Already have an account? <a asp-action="Login" class="text-decoration-none">Sign in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () { 'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}


