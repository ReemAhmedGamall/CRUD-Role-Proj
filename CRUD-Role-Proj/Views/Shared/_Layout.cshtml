<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUD PROJ</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3E%3Cpath fill='%23674636' d='M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s1 0 1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 14h-1v-1a4.5 4.5 0 0 0-9 0v1H0v-1a5.5 5.5 0 0 1 11 0v1z'/%3E%3C/svg%3E" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUD_Role_Proj.styles.css" asp-append-version="true" />
    <style>
        .app-navbar { 
            background: linear-gradient(135deg, #674636, #ff9a66);
            font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        }
        .app-navbar .navbar-brand,
        .app-navbar .nav-link { color: #ffffff !important; }
        .app-navbar .navbar-brand { font-weight: 800; letter-spacing: .3px; margin-right: 1rem; }
        .app-navbar .nav-link { font-weight: 600; margin: 0.5rem; padding: 0.5rem 1rem !important; }
        .app-navbar .navbar-nav { gap: 0.5rem; }
        .app-navbar .nav-link:hover,
        .app-navbar .nav-link:focus,
        .app-navbar .nav-link.active { color: #fff4ee !important; }
        .app-navbar .navbar-toggler { border-color: rgba(255,255,255,.55); }
        .app-navbar .navbar-toggler-icon { filter: invert(1) grayscale(1); }
        .btn-app { background-image: linear-gradient(135deg, #674636, #ff9a66); color: #fff !important; border: 0; box-shadow: 0 6px 16px rgba(231,123,123,.25); }
        .btn-app:hover { filter: brightness(0.98); color: #fff !important; }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark app-navbar border-0 shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CRUD PROJ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index")
    {
        <main role="main">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - CRUD-Role-Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
